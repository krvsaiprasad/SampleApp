<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_200"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MORE"
        android:textSize="16dp"
        android:textStyle="bold"
        android:background="@color/md_grey_200"
        android:gravity="center"
        android:padding="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        android:background="@color/md_teal_A400">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_user1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USER NAME"
            android:layout_marginTop="4dp"
            android:textSize="14dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:textColor="@color/md_white_1000"/>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:padding="15dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add CutPro favourite"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_panorama_fish_eye_black_24dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_rightarrow"
                android:textStyle="bold"/>


            <TextView
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_panorama_fish_eye_black_24dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_rightarrow"
                android:textStyle="bold"/>

            <TextView
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wish List"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_panorama_fish_eye_black_24dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_rightarrow"
                android:textStyle="bold"/>

            <TextView
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reviews"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_panorama_fish_eye_black_24dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_rightarrow"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:padding="15dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="My Credits"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_panorama_fish_eye_black_24dp"
                    android:drawablePadding="10dp"/>

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:textColor="@color/md_white_1000"
                    android:text="$10"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:background="@color/md_teal_A700"
                    android:textStyle="bold" />

                <ImageView
                    android:padding="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_rightarrow"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <TextView
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_panorama_fish_eye_black_24dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_rightarrow"
                android:textStyle="bold"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>